<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/actionbar_height" >

    <RelativeLayout
        android:id="@+id/actionbar_background"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_centerVertical="true"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/actionbar_home_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_white"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/actionbar_home_btn"
            android:layout_width="@dimen/actionbar_width"
            android:layout_height="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_header_item"
            android:src="@drawable/ico_hamburger" />

        <LinearLayout
            android:id="@+id/actionbar_actions"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Search Result"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>