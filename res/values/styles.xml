<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_header_item</item>
    </style>

    <style name="ActionBarItem">
        <item name="android:layout_width">@dimen/actionbar_width</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:background">@drawable/bg_header_item</item>
    </style>

    <style name="ActionBarButton" parent="ActionBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/actionbar_text_button_padding</item>
        <item name="android:paddingRight">@dimen/actionbar_text_button_padding</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimary" parent="CustomButton">
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="ButtonSecondary" parent="CustomButton">
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>

    <style name="ResultSearchItem">
        <item name="android:background">@drawable/bg_search_result_item</item>
    </style>

    <style name="SearchSummary">
        <item name="android:background">@drawable/bg_search_result_summary</item>
    </style>

    <style name="MenuSecondary" parent="CustomButton">
        <item name="android:background">@drawable/bg_menu_secondary</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="ButtonHighlight" parent="CustomButton">
        <item name="android:background">@drawable/bg_button_highlight</item>
    </style>

    <style name="ButtonWhite" parent="CustomButton">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/button_white_text</item>
    </style>

    <style name="ButtonFacebook" parent="CustomButton">
        <item name="android:background">@drawable/bg_button_facebook</item>
    </style>

    <style name="EditTextAccount">
        <item name="android:background">@drawable/bg_resume_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_account_height</item>
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingLeft">@dimen/item_padding_normal</item>
        <item name="android:paddingRight">@dimen/item_padding_normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextBottom" parent="EditTextAccount">
        <item name="android:background">@drawable/bg_resume_bottom</item>
    </style>

    <style name="EditTextResume" parent="EditTextAccount">
        <item name="android:background">@color/black_transparent</item>
        <!-- <item name="android:background">@drawable/bg_edittext_normal</item> -->
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="LayoutResumeBottom">
        <item name="android:background">@drawable/bg_edittext_bottom</item>
    </style>

    <style name="LayoutResumeNormal">
        <item name="android:background">@drawable/bg_edittext_normal</item>
    </style>

    <!-- Item in footer -->
    <style name="FooterItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_footer_item</item>
        <item name="android:textColor">@drawable/bg_footer_text</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/LoadingDialogAnimation</item>
    </style>

    <style name="LoadingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/loading_fade_in</item>
        <item name="android:windowExitAnimation">@anim/loading_fade_out</item>
    </style>

    <style name="ConfirmDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <style name="MenuDropDown">
        <item name="@android:windowEnterAnimation">@anim/menu_up_to_down</item>
        <item name="@android:windowExitAnimation">@anim/menu_down_to_up</item>
    </style>

    <style name="TabLabelTextView">
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TabValueTextView" parent="TabLabelTextView">
        <item name="android:textColor">@color/text_input</item>
    </style>

    <style name="ResumeTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:paddingLeft">@dimen/padding_8dp</item>
        <item name="android:paddingRight">@dimen/padding_8dp</item>
        <item name="android:paddingTop">@dimen/padding_16dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="ResumeSubTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:paddingLeft">@dimen/padding_8dp</item>
        <item name="android:paddingRight">@dimen/padding_8dp</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:background">@color/footer_background_tap</item>
    </style>

</resources>