<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Change padding vs. _normal when users clicks -->
    <item
        android:left="3px"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_transparent_10" />

            <corners android:topRightRadius="0dp" />
        </shape>
    </item>
    <!-- Main Top color -->
    <item
        android:bottom="2px"
        android:left="1px"
        android:right="2px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/primary_tap" />

            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>