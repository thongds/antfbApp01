<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item
        android:left="2px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_transparent" />

            <corners android:topRightRadius="0dp" />
        </shape>
    </item>
    <!-- Main Top color -->
    <item
        android:bottom="3px"
        android:right="3px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/a110_search_summary" />

            <!--
                 <stroke
                android:width="1px"
                android:color="@color/button_white_border" />
            -->

            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>