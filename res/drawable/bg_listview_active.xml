<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disable -->
    <item android:drawable="@color/menu_background_active" android:state_enabled="false"/>

    <!-- Press and focus -->
    <item android:drawable="@color/menu_background_tap" android:state_focused="true"/>
